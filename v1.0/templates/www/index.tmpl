{% extends base_template %}

{% block title %}
MATTHEW ROY ARNOLD - Bristol, UK based fine artist
{% endblock %}


{% block inpagecss %}
{% endblock %}


{% block header %}
  <div class="row">
    <div class="small-12 columns">
      <div id="bg-container">
        <div id="bg-img-container">
          <img src="{{ root_path }}img/hand-bg.png" />
        </div>
      </div>
      <h1 id="index-site-header">
        MATTHEW<br />ROY<br />ARNOLD
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="page-type-header">Fine Artist</div>
    </div>
  </div>
{% endblock %}

{% block navigation %}
{% endblock %}

{% block maincontent %}

<div class="row">
  <div class="large-6 small-12 columns">
    <div class="nav">
      <a href="{{ root_path }}works/">
        <img src="{{ root_path }}img/small/home_works_btn.jpg"
          data-interchange="[{{ root_path }}img/small/home_works_btn.jpg, (default)], [{{ root_path }}img/large/home_works_btn.jpg, (small)]"
          alt="An example work from the interactions range" />
        <span class="index-caption">Works</span>
      </a>
    </div>
  </div>
  <div class="large-6 small-6 columns">
    <div class="nav">
      <a href="{{ root_path }}exhibitions/">
        <img src="{{ root_path }}img/small/home_exhibitions_btn.jpg" 
          data-interchange="[{{ root_path }}img/small/home_exhibitions_btn.jpg, (default)], [{{ root_path }}img/large/home_exhibitions_btn.jpg, (small)]"
          alt="Exhibitions" />
        <span class="index-caption">Exhibitions</span>
      </a>
    </div>
  </div>
  <div class="large-4 small-6 columns">
    <div class="nav">
      <a href="{{ root_path }}acquire/index.html">
        <img src="{{ root_path }}img/small/home_acquire_btn.jpg" 
          data-interchange="[{{ root_path }}img/small/home_acquire_btn.jpg, (default)], [{{ root_path }}img/large/home_acquire_btn.jpg, (small)]"
          alt="Acquing work" />
        <span class="index-caption">Acquiring&nbsp;Work</span>
      </a>
    </div>
  </div>
  <div class="large-4 small-6 columns">
    <div class="nav">
      <a href="{{ root_path }}about.html">
        <img src="{{ root_path }}img/small/home_about_btn.jpg" 
          data-interchange="[{{ root_path }}img/small/home_about_btn.jpg, (default)], [{{ root_path }}img/large/home_about_btn.jpg, (small)]"
          alt="Matt at work" />
        <span class="index-caption">About</span>
      </a>
    </div>
  </div>
  <div class="large-4 small-6 columns">
    <div class="nav">
      <a href="http://www.facebook.com/MatthewRoyArnold/">
        <img src="{{ root_path }}img/small/home_news_btn.jpg"
          data-interchange="[{{ root_path }}img/small/home_news_btn.jpg, (default)], [{{ root_path }}img/large/home_news_btn.jpg, (small)]"
          alt="News on Facebook" />
        <span class="index-caption">News</span>
      </a>
    </div>
  </div>
</div>
