
{% macro captioned_img(src, url, title, caption='', is_slideshow=False, w="467", h="238" ) %}
      <div class="nav">
        <a href="{{ url }}" {% if is_slideshow %}class="slideshow-link"{% endif %}>
          <span>{{ title }}</span>
          <img src="{{ src }}" width="{{ w }}" height="{{ h }}" alt="{{ title }}" />
        </a>
      </div>
      {% if caller %}
      <p class="nav-caption">{{ caller() }}</p>
      {% endif %}
{% endmacro %}




{% macro standard_header(title='', type='') %}
  <div class="row">
    <div class="small-12 columns">
      <a href="{{ root_path }}">
        <img id="logo" src="{{ root_path }}img/home_title.png" alt="Matthew Roy Arnold" />
      </a>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h1>{{ title }}</h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="page-type-header">
      {% for bc_url, bc_name in breadcrumb_urls %}
        {% if not loop.first %}/ {% endif %}<a href="{{ bc_url }}">{{ bc_name }}</a>{% if loop.last %} / {{ title }}{% endif %}
      {% endfor %} 
      </div>
    </div>
  </div>
{% endmacro %}


{% macro email() %}<a href="mailto:matthewroyarnold@gmail.com">matthewroyarnold@gmail.com</a>{% endmacro %}



{% macro slide(title='', src='', date='', media='', width='normal') %}
<div class="slide slide-{{ width }}">
  {% if src %}
  <div class="slide-img-container">
    <img src="{{ src }}" alt="{{ title }}" />
  </div>
  {% endif %}
  <div class="slide-placard">
    <p class="slide-placard-title">{{ title }}</p>
    {% if media or date %}<p class="slide-placard-subtitle">
    {% if media %}<span class="slide-placard-media">{{ media }}</span>{% endif %}
    {% if date %}<span class="slide-placard-date">{{ date }}</span>{% endif %}
    </p>{% endif %}
    <div class="clear"></div>
    {% if caller %}{{ caller() }}{% endif %}
  </div>
</div>
{% endmacro %}

{% macro itemscope(t) %} itemscope itemtype="http://schema.org/{{ t }}"{% endmacro %}
